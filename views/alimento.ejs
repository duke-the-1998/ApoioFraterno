<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<!DOCTYPE html>
<html lang="en">
<meta name="viewport" content="width=device-width, initial-scale=0.6">

<head>
    <!--Bootsrap 4 CDN-->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
        integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">

    <!--Fontawesome CDN-->
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css"
        integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
    <link href="/css/alimento.css" rel="stylesheet" type="text/css">
    <link href="/css/alertas.css" rel="stylesheet" type="text/css">
    <link rel="shortcut icon" href="/images/apoioFratlogo.png" />
    <title>Alimento</title>
</head>

<body>
    <% if (typeof type != 'undefined') { %>
        <% for (var m of messages) { %>
            <div class=<%= type %>>
                <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span> 
                <strong><%= intro %></strong> <%= m %>
            </div>
        <% } %>
    <% } %>

    <% if (tipo === "admin") { %>      
        <%- include ('partials/navbarAdmin.ejs') %>      
    <% } else { %> 
        <%- include ('partials/navbar.ejs') %>
    <% } %>

    <form action="/voluntarios/alimento" method="POST">
        <div class="form-row">
            <div class="form-group col-md">
                <div class="card">
                    <img class="card-img-top" src=<%="/images/Alimentos/" + imagem %>>
                    <div class="card-body">
                        <h5 class="card-title"><%= alimento %></h5>
                        <p> <%= observacoes %> </p>
                    </div>
                </div>
            </div>
            <div class="form-group col-md">
                <div class="card">
                    <div class="card-body">
                        <div class="container text-center vertical-center">
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <label for="inputState">Capacidade</label>
                                    <select id="inputState" name="peso" class="form-control">
                                        <% for (var c of capacidades) { %>
                                            <option>
                                                <%= c.capacidade %>
                                            </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                            <% if (validade === "on") { %>
                                <div class="form-row">
                                    <div class="form-group col-md">
                                        <label for="inputState">Data de validade</label><br>
                                        <input type="month" class="form-control" name="validade" data-date-format="mm/yyyy" pattern="[0-9]{4}-[0-9]{2}" required>
                                    </div>
                                </div>
                            <% } %>
                            <div class="form-row">
                                <div class="form-group col-md">
                                    <label for="inputZip">Quantidade</label>
                                    <input type="number" class="form-control" name="quantidade" required>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="btn-submit"> 
            <input class="inputs" type="hidden" name="id" value=<%= id %>>
            <input class="inputs" type="hidden" name="alimento" value=<%= alimento %>>
            <input type="submit" class="btn" name=<%= acao %> value="Concluir">
            <a href="/voluntarios/inventario/<%= acao %>" id="voltar"><i class="fa fa-arrow-left"></i> Voltar</a>
        </div>
    </form>
    <script src="/javascript/modules.js"></script>
</body>
</html>