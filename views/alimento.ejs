<link href="//maxcdn.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

<!DOCTYPE html>
<html lang="en">

    <head>
    <!--Bootsrap 4 CDN-->
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        
    <!--Fontawesome CDN-->
        <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
        <link href="/css/inventario.css" rel="stylesheet" type="text/css">
        <link rel="shortcut icon" href="/imagens/apoioFratlogo.png" />
        <title>Alimento</title>
    </head>

    <body>
        <form action="/concluir" method="POST">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <div class="card">
                        <img class="card-img-top" src=<%= "/imagens/Alimentos/" + alimento + ".jpg" %> alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title"> <%= alimento %></h5>
                        </div>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    <p> Uma descrição sobre o alimento </p>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputState">Peso do alimento</label>
                    <select id="inputState" name="peso" class="form-control">
                        <% for (var peso of pesos) { %>
                            <option><%= peso.peso %></option>
                        <% } %>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Data de validade</label><br>
                    <input type="date" class="form-control" name="validade" data-date-format="dd/mm/yyyy">
                </div>
                <div class="form-group col-md-2">
                    <label for="inputZip">Quantidade</label>
                    <input type="number" class="form-control" name="quantidade">
                </div>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" name="Entrar">
                    <label class="form-check-label" for="gridCheck">
                        Entrada de produto
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="gridCheck" name="Sair">
                    <label class="form-check-label" for="gridCheck">
                        Saída de produto
                    </label>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Concluido</button>
        </form>
    </body>
</html>